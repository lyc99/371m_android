<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_player_names"
        android:id="@+id/enter_names"
        android:textAlignment="center"
        android:textSize="30dp" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/player_layout"
            android:orientation="vertical">

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_1"
                android:text="Player 1"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_2"
                android:text="Player 2"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_3"
                android:text="Player 3"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_4"
                android:text="Player 4"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_5"
                android:text="Player 5"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_6"
                android:text="Player 6"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_7"
                android:text="Player 7"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_8"
                android:text="Player 8"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_9"
                android:text="Player 9"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_10"
                android:text="Player 10"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_11"
                android:text="Player 11"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_12"
                android:text="Player 12"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_13"
                android:text="Player 13"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_14"
                android:text="Player 14"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_15"
                android:text="Player 15"
                android:visibility="gone"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/player_name_16"
                android:text="Player 16"
                android:visibility="gone"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_number_of_players_button_text"
                android:onClick="onSendPlayerData"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>